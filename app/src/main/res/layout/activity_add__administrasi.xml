<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrasi.Add_Administrasi">

    <View
        android:id="@+id/bar_atas"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="0dp"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/bg_header_custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="Tambah Data Mahasiswa Aktif Jurusan"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="Administrasi Niaga"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_atas"
        android:layout_alignStart="@+id/et_nim"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="NIM"
        android:textColor="#043353"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nim"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bar_atas"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_form"
        android:fontFamily="@font/centurygothic_regular"
        android:textSize="17dp"
        android:textColor="#043353"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLength="8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nim"
        android:layout_alignStart="@+id/et_nama"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="Nama"
        android:textColor="#043353"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_nim"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_form"
        android:fontFamily="@font/centurygothic_regular"
        android:textSize="17dp"
        android:textColor="#043353"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nama"
        android:layout_alignStart="@+id/et_prodi"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="Program Studi"
        android:textColor="#043353"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_prodi"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_nama"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_form"
        android:fontFamily="@font/centurygothic_regular"
        android:textSize="17dp"
        android:textColor="#043353"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_prodi"
        android:layout_alignStart="@+id/et_telp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/centurygothic_bold"
        android:text="No. Telepon"
        android:textColor="#043353"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_telp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_prodi"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_form"
        android:fontFamily="@font/centurygothic_regular"
        android:textSize="17dp"
        android:textColor="#043353"
        android:textAlignment="center"
        android:inputType="phone"
        android:maxLength="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_foto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/et_telp"
        android:layout_alignStart="@+id/et_telp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/foto"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="521dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_foto"
        android:layout_alignStart="@+id/btn_foto"
        android:layout_alignEnd="@+id/btn_foto"
        android:layout_marginStart="13dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/centurygothic_regular"
        android:text="Your Picture"
        android:textColor="#043353"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_simpanAdministrasi"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/et_telp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_simpan"
        android:fontFamily="@font/centurygothic_bold"
        android:text="Simpan"
        android:textColor="#F1F1F1"
        android:textSize="13dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>